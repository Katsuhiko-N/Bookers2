<div class="container">
    <div class="row">
        <div class="tpl col-md-3">
            <!--部分テンプレート-->
            <%= render 'books/tpl', book_new: @book_new, user: @user %>
        </div>
        
        <div class="m-content col-md-8 offset-md-1">
            <!--右半分本文-->
            <h2>Books</h2>
            
            <table>
                <thead>
                    <tr>
                        <!--一個目は画像部分なので空白-->
                        <th></th>
                        <th>Title</th>
                        <th>Opinion</th>
                    </tr>
                </thead>
                <tbody>
                    <% @books.each do |book| %>
                        <tr>
                            <td>
                            <%= link_to user_path(book.user.id) do %>
                                <%= image_tag book.user.get_profile_image(100,100) %>
                            <% end %>
                            </td>
                            <td class="td-text"><%= link_to "#{book.title}", book_path(book.id) %></td>
                            <td class="td-text"><%= book.body %></td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
            <%= paginate @books %>
        </div>
    </div>
</div>
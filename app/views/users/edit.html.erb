<h1>User info</h1>

<%= form_with model: @user do |f| %>
    <h4>Name</h4>
    <%= f.text_field :name %>
    <h4>Image</h4>
    <!--拡張子画像のみ-->
    <%= f.file_field :profile_image, placeholder: "選択されていません", accept: "image/*" %>
    <h4>Introduction</h4>
    <%= f.text_area :introduction %>
    <%= f.submit 'Update User' %>
    
<% end %>
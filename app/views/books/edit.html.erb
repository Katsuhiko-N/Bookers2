<h1>Editing Book</h1>
<%= form_with model: @book do |f| %>
    <h3>Title</h3>
    <%= f.text_field :title, autofocus: true %>
    <h3>Opinion</h3>
    <%= f.text_area :body %>
    <%= f.submit "Updete Book"%>
<% end %>
    
    <!--本のshowページへ-->
    <p><%= link_to "show", book_path(@book.id) %></p>
    
    <!--本のdestroyページへ-->
    <p><%= link_to "destroy", book_path(@book.id) %></p>

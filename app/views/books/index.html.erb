<!--部分テンプレート-->
<p><%= render 'tpl', book_new: @book_new, user: @user %></p>

<!--右半分本文-->
<h1>Books</h1>

<table>
    <thead>
        <tr>
            <!--一個目は画像部分なので空白-->
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
        </tr>
    </thead>
    <tbody>
        <% @books.each do |book| %>
            <tr>
                <td>
                <%= link_to user_path(book.user.id) do %>
                    <div><%= image_tag book.user.get_profile_image(100,100) %></div>
                <% end %>
                </td>
                <td><%= link_to "#{book.title}", book_path(book.id) %></td>
                <td><%= book.body %></td>
            </tr>
        <% end %>
    </tbody>
</table>
    
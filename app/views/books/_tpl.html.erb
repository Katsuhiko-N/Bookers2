<h1>テンプレート</h1>

<!--本詳細(/books/show)の時だけその本のuser情報-->
<h1>User info</h1>
<div><%= image_tag user.get_profile_image(100,100) %></div>
<h3>name<%= user.name %></h3>
<h3>introduction<%= user.introduction %></h3>





<!--表示にはインスタンス変数book_newが必要-->
<h1>New book</h1>
<%= form_with model: book_new do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Opinion</h4>
    <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
<% end %>